# ===========================================
# TRAVoices Environment Variables
# ===========================================

# LiveKit Cloud Credentials
# Get from: https://cloud.livekit.io
NEXT_PUBLIC_LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=APIxxxxxxxxxxxxx
LIVEKIT_API_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Clerk Authentication
# Get from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# ===========================================
# Agent Services (for Python agent)
# ===========================================

# Deepgram (Speech-to-Text)
# Get from: https://console.deepgram.com
DEEPGRAM_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenRouter (Translation LLM)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxx
OPENROUTER_MODEL=openai/gpt-4o-mini

# ElevenLabs (Text-to-Speech)
# Get from: https://elevenlabs.io
ELEVENLABS_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===========================================
# Optional
# ===========================================

# Supabase (if using database)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE=

# Stripe (Phase 3 - billing)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# App Settings
NEXT_PUBLIC_APP_NAME=TRAVoices
NEXT_PUBLIC_ENV=development
